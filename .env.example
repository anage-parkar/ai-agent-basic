# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

AGENT_TEMPERATURE=0.7

# Hugging Face Configuration (if using hf provider)
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here

# Ollama Configuration (if using ollama provider)
# Use host.docker.internal to access host machine from container
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Azure Bing Search (Optional)
AZURE_BING_SEARCH_KEY=your-bing-search-key-here
AZURE_BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/search
